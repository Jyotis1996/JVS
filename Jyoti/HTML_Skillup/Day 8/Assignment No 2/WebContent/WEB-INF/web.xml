<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>EmployeeManager</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>AddEmployeeData</servlet-name>
    <servlet-class>servlet.AddEmployeeData</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AddEmployeeData</servlet-name>
    <url-pattern>/welcome</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>DisplayEmployeeData</servlet-name>
    <servlet-class>servlet.DisplayEmployeeData</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DisplayEmployeeData</servlet-name>
    <url-pattern>/DisplayEmployeeData</url-pattern>
  </servlet-mapping>

   <servlet>
    <servlet-name>ClearEmployeeData</servlet-name>
    <servlet-class>servlet.ClearEmployeeData</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ClearEmployeeData</servlet-name>
    <url-pattern>/ClearEmployeeData</url-pattern>
  </servlet-mapping>
</web-app>